(define-syntax begin3
(syntax-rules ()
((begin3 exp ...)
((lambda () exp ...)))))

(define-syntax begin2
(syntax-rules ()
((begin2 exp)
exp)
((begin exp1 exp2 ...)
(let ((x exp1))
(begin2 exp2 ...)))))


(define-syntax and2
(syntax-rules ()
((and2) #t)
((and2 test) test)
((and2 test1 test2 ...)
(if test1 (and2 test2 ...) #f))))
